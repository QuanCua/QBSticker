<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.quanbd.qbsticker.QBStickerView
        android:id="@+id/qbStickerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_700"
        app:layout_constraintBottom_toTopOf="@+id/btnAddText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtInputText"

        app:isEnableTransformIcon="false"
        app:isEnableDeleteIcon="false"
        app:lineSelectedColor="#0E4FFF"/>

    <EditText
        android:id="@+id/edtInputText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="#597A0000"
        android:hint="Enter your text"
        app:layout_constraintTop_toBottomOf="@+id/btnRatio_11"
        />

    <Button
        android:id="@+id/btnRatio_11"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnRatio_169"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnRatio_169"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="16:9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnRatio_916"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="9:16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRatio_169"/>

    <Button
        android:id="@+id/btnAddText"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>